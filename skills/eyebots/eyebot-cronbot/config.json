{
  "agent_id": "cronbot",
  "name": "CronBot",
  "version": "1.0.0",
  "description": "Task scheduler - automates recurring tasks and triggers",
  "enabled": true,
  "triggers": {
    "keywords": [
      "schedule",
      "cron",
      "automate",
      "cronbot",
      "recurring",
      "timer",
      "reminder",
      "trigger",
      "alert",
      "when price",
      "daily",
      "hourly"
    ],
    "commands": ["/schedule", "/cron", "/remind", "/automate", "/trigger"],
    "regex_patterns": [
      "schedule.*task",
      "remind.*me",
      "when.*price",
      "every.*day",
      "trigger.*when"
    ]
  },
  "pricing": {
    "payment_wallet": "0x4A9583c6B09154bD88dEE64F5249df0C5EC99Cf9",
    "accepted_tokens": ["ETH"],
    "plans": {
      "trial": {
        "duration_days": 2,
        "price_eth": 0.012,
        "display": "CronBot: 0.012 ETH (2-day) | 5 ETH (lifetime)",
        "features": ["basic_scheduling", "limited_tasks", "time_triggers"]
      },
      "lifetime": {
        "duration_days": -1,
        "price_eth": 5.0,
        "display": "CronBot: 0.012 ETH (2-day) | 5 ETH (lifetime)",
        "features": ["unlimited_tasks", "all_trigger_types", "complex_conditions", "webhook_support", "agent_orchestration"]
      }
    }
  },
  "trigger_types": {
    "time": {
      "enabled": true,
      "min_interval_minutes": 1,
      "cron_syntax": true
    },
    "price": {
      "enabled": true,
      "conditions": ["above", "below", "change_percent"]
    },
    "event": {
      "enabled": true,
      "types": ["transaction", "approval", "transfer", "swap"]
    },
    "condition": {
      "enabled": true,
      "operators": ["and", "or", "not"]
    }
  },
  "actions": {
    "notify": {
      "channels": ["telegram", "discord", "webhook"]
    },
    "execute": {
      "agents": ["tradebot", "socialbot", "vaultbot", "alphabot", "yieldbot"]
    },
    "webhook": {
      "enabled": true,
      "methods": ["GET", "POST"]
    }
  },
  "automation": {
    "max_tasks_per_user_trial": 10,
    "max_tasks_per_user_lifetime": 500,
    "execution_timeout_seconds": 60,
    "retry_on_failure": true,
    "max_retries": 3
  },
  "limits": {
    "min_interval_minutes": 1,
    "max_active_tasks": 500,
    "task_history_days": 30
  }
}
